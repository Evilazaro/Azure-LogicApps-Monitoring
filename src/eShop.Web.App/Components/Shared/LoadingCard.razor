@using Microsoft.FluentUI.AspNetCore.Components

<FluentCard Style="width: 100%; padding: 24px;">
    <FluentStack Orientation="Orientation.Vertical" VerticalGap="16" HorizontalAlignment="HorizontalAlignment.Center">
        <FluentProgressRing />
        <FluentLabel Typo="Typography.Body" Style="color: var(--neutral-foreground-hint);">
            @Message
        </FluentLabel>
    </FluentStack>
</FluentCard>

@code {
    [Parameter]
    public string Message { get; set; } = "Loading...";
}