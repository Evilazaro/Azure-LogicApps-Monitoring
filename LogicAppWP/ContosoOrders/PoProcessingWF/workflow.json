{
    "definition": {
        "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
        "contentVersion": "1.0.0.0",
        "actions": {
            "Delete_message_(V2)": {
                "type": "ApiConnection",
                "inputs": {
                    "host": {
                        "connection": {
                            "referenceName": "azurequeues"
                        }
                    },
                    "method": "delete",
                    "path": "/v2/storageAccounts/@{encodeURIComponent(encodeURIComponent('{WORKFLOW_STORAGE_ACCOUNT_NAME}'))}/queues/@{encodeURIComponent('OrdersPlaced')}/messages/@{encodeURIComponent(triggerBody()?['MessageId'])}",
                    "queries": {
                        "popreceipt": "@triggerBody()?['PopReceipt']"
                    }
                },
                "runAfter": {
                    "Condition": [
                        "SUCCEEDED"
                    ]
                }
            },
            "HTTP": {
                "type": "Http",
                "inputs": {
                    "uri": "{ORDERS_API_ENDPOINT}/Orders",
                    "method": "POST",
                    "headers": {
                        "accept": "*/*",
                        "Content-Type": "application/json"
                    },
                    "body": "@triggerBody()?['MessageText']"
                },
                "runAfter": {},
                "runtimeConfiguration": {
                    "contentTransfer": {
                        "transferMode": "Chunked"
                    }
                }
            },
            "Condition": {
                "type": "If",
                "expression": {
                    "and": [
                        {
                            "equals": [
                                "@outputs('HTTP')?['statusCode']",
                                200
                            ]
                        }
                    ]
                },
                "actions": {
                    "HTTP_1": {
                        "type": "Http",
                        "inputs": {
                            "uri": "{ORDERS_API_ENDPOINT}/WeatherForecast",
                            "method": "GET",
                            "headers": {
                                "accept": "text/plain"
                            }
                        },
                        "runAfter": {
                            "Create_blob_(V2)": [
                                "SUCCEEDED"
                            ]
                        },
                        "runtimeConfiguration": {
                            "contentTransfer": {
                                "transferMode": "Chunked"
                            }
                        }
                    },
                    "Create_blob_(V2)": {
                        "type": "ApiConnection",
                        "inputs": {
                            "host": {
                                "connection": {
                                    "referenceName": "azureblob"
                                }
                            },
                            "method": "post",
                            "body": "@body('HTTP')",
                            "headers": {
                                "ReadFileMetadataFromServer": true
                            },
                            "path": "/v2/datasets/@{encodeURIComponent(encodeURIComponent('{WORKFLOW_STORAGE_ACCOUNT_NAME}'))}/files",
                            "queries": {
                                "folderPath": "/ordersprocessedsuccessfully",
                                "name": "@triggerBody()?['MessageId']",
                                "queryParametersSingleEncoded": true
                            }
                        },
                        "runtimeConfiguration": {
                            "contentTransfer": {
                                "transferMode": "Chunked"
                            }
                        }
                    }
                },
                "else": {
                    "actions": {
                        "Create_blob_(V2)_1": {
                            "type": "ApiConnection",
                            "inputs": {
                                "host": {
                                    "connection": {
                                        "referenceName": "azureblob"
                                    }
                                },
                                "method": "post",
                                "body": "@body('HTTP')",
                                "headers": {
                                    "ReadFileMetadataFromServer": true
                                },
                                "path": "/v2/datasets/@{encodeURIComponent(encodeURIComponent('{WORKFLOW_STORAGE_ACCOUNT_NAME}'))}/files",
                                "queries": {
                                    "folderPath": "/ordersprocessedwitherrors",
                                    "name": "@triggerBody()?['MessageId']",
                                    "queryParametersSingleEncoded": true
                                }
                            },
                            "runtimeConfiguration": {
                                "contentTransfer": {
                                    "transferMode": "Chunked"
                                }
                            }
                        }
                    }
                },
                "runAfter": {
                    "HTTP": [
                        "SUCCEEDED"
                    ]
                }
            }
        },
        "outputs": {},
        "triggers": {
            "When_there_are_messages_in_a_queue_(V2)": {
                "type": "ApiConnection",
                "inputs": {
                    "host": {
                        "connection": {
                            "referenceName": "azurequeues"
                        }
                    },
                    "method": "get",
                    "path": "/v2/storageAccounts/@{encodeURIComponent(encodeURIComponent('{WORKFLOW_STORAGE_ACCOUNT_NAME}'))}/queues/@{encodeURIComponent('OrdersPlaced')}/message_trigger"
                },
                "recurrence": {
                    "interval": 1,
                    "frequency": "Second",
                    "timeZone": "Central Standard Time"
                },
                "splitOn": "@triggerBody()?['QueueMessagesList']?['QueueMessage']"
            }
        }
    },
    "kind": "stateful"
}