{
  "$schema": "https://json.schemastore.org/vs-code-settings.json",
  // Azure Logic Apps Standard Configuration
  "azureLogicAppsStandard.deploySubpath": ".",
  "azureLogicAppsStandard.projectLanguage": "JavaScript",
  "azureLogicAppsStandard.projectRuntime": "~4",
  // Azure Functions Configuration
  // Suppresses project prompts since Logic Apps use the Functions runtime
  "azureFunctions.suppressProject": true
}